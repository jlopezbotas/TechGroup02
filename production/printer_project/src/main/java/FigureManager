package src.main.java;

import java.util.ArrayList;
import java.util.Scanner;

public class FigureManager {
    ArrayList<Figure> figuresList = new ArrayList<>();

    public ArrayList<Figure> createFigure(String figureName, char sign, int height, int width){
        switch (figureName) {
            case "Rectangle":
                figuresList.add(new Rectangle(sign, height, width));
                break;
            case "Triangle":
                figuresList.add(new Triangle(sign, height));
                break;
            case "Rhombus":
                figuresList.add(new Rhombus(sign, height));
                break;
         }
         return figuresList;
    }

    public void printFigures() {
        for(Figure figure : figuresList) {
            figure.print();
        }
        figuresList.clear();
    }
}